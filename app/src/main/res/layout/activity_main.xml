<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sagar.policesearch.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spn_state"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />

        <Spinner
            android:id="@+id/spn_district"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_searchId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:hint="@string/search_id"
            android:inputType="text"
            android:layout_marginStart="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--        style="?android:attr/buttonBarStyle"-->
            <!--        android:outlineSpotShadowColor="@color/colorPrimaryDark">-->

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:onClick="onReset"
                android:text="@string/reset"
                app:backgroundTint="#C32D12" />
            <!--            style="?android:attr/buttonBarButtonStyle"/>-->

            <Button
                android:id="@+id/btn_search"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:onClick="onSearch"
                android:text="@string/search"
                app:backgroundTint="#C32D12" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_rec_view"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@id/btn_search"
            android:layout_gravity="center"
            android:paddingHorizontal="2dp"
            tools:ignore="NotSibling" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Share"
            android:onClick="onShare"
            app:backgroundTint="#C32D12" />

    </LinearLayout>

</LinearLayout>