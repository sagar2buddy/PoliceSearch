<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/my_card_view">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:background="#ffffff"
        android:padding="3dip"
        android:layout_marginTop="2dp">


    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/Sno"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="Sno"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSno"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="5dp"
            android:gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/label_psname"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="PS Name"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textPsname"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/label_phoneno"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="Phone No"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textPhoneno"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:gravity="left"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/label_district"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="District"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textDistrict"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="wrap_content"/>
    </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>